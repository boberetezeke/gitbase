!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title GitBase
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .navbar.navbar-default.navbar-static-top
      .container
        %button.navbar-toggle{'type' => "button", 'data-toggle' => 'collapse', 'data-target' => '.navbar-responsive-collapse'}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        - if current_user
          .navbar-text
          /.navbar-text= breadcrumbs.html_safe
        - else
          .navbar-brand
            GitBase - git based wiki
        .navbar-divider
        .navbar-collapse.collapse.navbar-responsive-collapse.pull-right
          - if current_user
            .navbar-text= "Logged in as #{current_user.email}"
            %ul.nav.navbar-nav
              -#%li.dropdown
                %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                  BPMN Diagrams
                  %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    = link_to("All BPMN Diagrams", bpmn_diagrams_path)
                  %li.divider
                  %li
                    = link_to("New BPMN Diagram", new_bpmn_diagram_path)
              %li.dropdown
                %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                  Pages
                  %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    = link_to("All Pages", pages_path)
                  %li.divider
                  %li
                    = link_to("New Page", new_page_path)
              %li.dropdown
                %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                  - if current_user.admin?
                    Users
                  - else
                    User
                  %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  - if current_user.admin?
                    %li= link_to "All Users", users_path
                  - else
                    %li= link_to "My Profile", user_path(current_user)
                  %li.divider
                  %li= link_to "Sign Out", destroy_user_session_path, :method => :delete
    .container
      - if notice
        %p.notice= notice
      - if alert
        %p.alert= alert
      #app
        = yield

      %script{type: "application/javascript"}
        = content_for :script

